---
import Layout from "../../layouts/Layout.astro";
import NavbarBasic from "../../components/navbar/NavbarBasic.jsx";
import NavbarCentered from "../../components/navbar/NavbarCentered.jsx";
import NavbarWithCTA from "../../components/navbar/NavbarWithCTA.jsx";
import MegaNavbar from "../../components/navbar/MegaNavbar.jsx";

const links = [
    { label: "Home", href: "#" },
    { label: "Products", href: "#" },
    { label: "Company", href: "#" },
];
---

<Layout>
    <div class="container mx-auto px-4 py-12">
        <div class="mb-12">
            <h1 class="text-3xl font-bold">Navbars</h1>
            <p class="text-gray-600 mt-2">
                A collection of responsive navigation bars.
            </p>
        </div>

        <div class="space-y-24">
            <section>
                <h2 class="text-xl font-semibold mb-6">Simple Navbar</h2>
                <div
                    class="border rounded-xl overflow-hidden bg-gray-50 p-4 sm:p-8"
                >
                    <div
                        class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100"
                    >
                        <NavbarBasic brand="Astro" links={links} client:load />
                    </div>
                </div>
            </section>

            <section>
                <h2 class="text-xl font-semibold mb-6">Centered Navbar</h2>
                <div
                    class="border rounded-xl overflow-hidden bg-gray-50 p-4 sm:p-8"
                >
                    <div
                        class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100"
                    >
                        <NavbarCentered
                            brand="Astro"
                            links={links}
                            client:load
                        />
                    </div>
                </div>
            </section>

            <section>
                <h2 class="text-xl font-semibold mb-6">Navbar with CTA</h2>
                <div
                    class="border rounded-xl overflow-hidden bg-gray-50 p-4 sm:p-8"
                >
                    <div
                        class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100"
                    >
                        <NavbarWithCTA
                            brand="Astro"
                            links={links}
                            client:load
                        />
                    </div>
                </div>
            </section>

            <section>
                <h2 class="text-xl font-semibold mb-6">Mega Menu Navbar</h2>
                <div
                    class="border rounded-xl overflow-hidden bg-gray-50 p-4 sm:p-8"
                >
                    <div
                        class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 min-h-[500px]"
                    >
                        <div class="relative">
                            <MegaNavbar client:load />
                            <div class="pt-32 px-8">
                                <h3 class="text-2xl font-bold text-gray-900">
                                    Content Section
                                </h3>
                                <p class="text-gray-600 mt-4 leading-relaxed">
                                    This is a preview of the Mega Menu Navbar.
                                    Hover over "Products" on desktop to see the
                                    megamenu, or use the mobile toggle on
                                    smaller screens.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</Layout>

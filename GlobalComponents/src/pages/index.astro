---
import Layout from "../layouts/Layout.astro";

const components = [
  {
    name: "Navbar",
    description: "A collection of responsive navigation bars.",
    href: "/navbar",
  },
  {
    name: "Hero",
    description: "Beautiful above-the-fold sections for landing pages.",
    href: "/hero",
  },
  {
    name: "UI",
    description: "A collection of user interface components.",
    href: "/ui",
  },
  {
    name: "Footer",
    description: "Simple and elegant footer components for your website.",
    href: "/footer",
  },
];
---

<Layout>
  <div class="relative isolate overflow-hidden">
    <!-- Background Decoration -->
    <div
      class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      aria-hidden="true"
    >
    </div>

    <section class="max-w-7xl mx-auto px-4 py-24 sm:py-32">
      <div class="text-center">
        <h1
          class="text-5xl md:text-7xl font-extrabold tracking-tight text-gray-900 mb-8"
        >
          The Modern UI <br />
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600"
            >Component Library</span
          >
        </h1>
        <p
          class="max-w-2xl mx-auto text-xl text-gray-600 leading-relaxed mb-12"
        >
          A collection of premium, mobile-first React components built with
          Tailwind CSS and Astro. Ready to drop into your next project.
        </p>

        <div class="flex flex-wrap justify-center gap-6">
          <a
            href="/navbar"
            class="group relative px-8 py-4 bg-indigo-600 text-white rounded-2xl font-bold transition-all hover:bg-indigo-700 hover:scale-105 shadow-xl shadow-indigo-200 duration-400"
          >
            Explore Components
          </a>
          <a
            href="https://docs.astro.build"
            target="_blank"
            class="px-8 py-4 bg-white text-gray-900 border border-gray-200 rounded-2xl font-bold transition-all hover:border-gray-900 shadow-sm duration-400"
          >
            View Documentation
          </a>
        </div>
      </div>

      <div class="mt-32">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-2xl font-bold text-gray-900">Browse Categories</h2>
          <div
            class="h-1 flex-grow mx-8 bg-gradient-to-r from-gray-100 to-transparent"
          >
          </div>
        </div>

        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-2">
          {
            components.map((item) => (
              <a
                href={item.href}
                class="group duration-500 relative bg-white border border-gray-100 rounded-3xl p-8 transition-all hover:border-indigo-600 hover:shadow-2xl hover:shadow-indigo-50 hover:-translate-y-2 overflow-hidden"
              >
                <div class="absolute top-0 right-0 p-4 opacity-0 group-hover:opacity-100 transition-opacity">
                  <svg
                    class="w-6 h-6 text-indigo-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </div>

                <div class="w-12 h-12 bg-indigo-50 rounded-2xl flex items-center justify-center mb-6 text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors duration-500">
                  {item.name === "Navbar" ? (
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"
                      />
                    </svg>
                  ) : (
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z"
                      />
                    </svg>
                  )}
                </div>

                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                  {item.name}
                </h3>
                <p class="text-gray-600 leading-relaxed">{item.description}</p>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>
